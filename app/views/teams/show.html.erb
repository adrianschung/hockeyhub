<div class="container">
  <h2>Welcome to <%= current_team.name %> hub</h2>
  <br />
  <table id="stats">
    <tr>
      <th>Wins</th>
      <th>Losses</th>
      <th>Overtime Losses</th>
      <th>Points</th>
      <th>Division Rank</th>
      <th>Conference Rank</th>
      <th>League Rank</th>
    </tr>
    <tr>
      <td><%= current_team.wins %></td>
      <td><%= current_team.losses %></td>
      <td><%= current_team.ot_losses %></td>
      <td><%= current_team.points %></td>
      <td><%= current_team.division_rank %></td>
      <td><%= current_team.conference_rank %></td>
      <td><%= current_team.league_rank %></td>
    </tr>
  </table>
  <br />
  <h3>Roster</h3>
  <br />
  <table id="players">
    <tr>
     <th>Player</th>
     <th>#</th>
    </tr>
    <% current_team.team_roster.each do |player| %>
      <tr>
        <td><%= player_name(player) %></td>
        <td><%= number(player) %></td>
      </tr>
    <% end %>
  </table>
</div>
